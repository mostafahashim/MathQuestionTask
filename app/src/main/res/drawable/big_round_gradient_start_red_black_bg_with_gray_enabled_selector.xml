<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" android:state_selected="true">
        <shape>
            <corners android:radius="20dp" />
            <gradient android:angle="180" android:endColor="@color/gray3" android:startColor="@color/gray" />
        </shape>
    </item>

    <item android:state_pressed="false" android:state_selected="true">
        <shape>
            <corners android:radius="20dp" />
            <gradient android:angle="180" android:endColor="@color/gray" android:startColor="@color/gray3" />
        </shape>
    </item>

    <item android:state_pressed="true" android:state_selected="false">
        <shape>
            <corners android:radius="20dp" />
            <gradient android:angle="180" android:endColor="@color/colorPrimary" android:startColor="@color/red_black" />
        </shape>
    </item>
    <item>
        <shape>
            <corners android:radius="20dp" />
            <gradient android:angle="180" android:endColor="@color/red_black" android:startColor="@color/colorPrimary" />
        </shape>
    </item>

</selector>